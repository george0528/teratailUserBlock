{
  "manifest_version": 2,
  "name": "teratailユーザブロック",
  "description": "teratailのuserブロック機能、ブロックしたユーザの記事が新着などに出なくなる",
  "version": "1.0",
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "128": "128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://teratail.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "32.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "https://*/*"
  ]
}